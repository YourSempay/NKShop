<Window x:Class="NKShop.View.CourierAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NKShop"
        xmlns:mvvm="clr-namespace:NKShop.VM"
        DataContext="{DynamicResource vm}"
        mc:Ignorable="d"
        Title="Добавление курьера" Height="450" Width="800" Background="#FF847C7C">
    <Window.Resources>
        <mvvm:CourierAddMVVM x:Key="vm"/>
    </Window.Resources>
    <Grid>



        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="190*"/>
            <ColumnDefinition Width="421*"/>
            <ColumnDefinition Width="190*"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="41*"/>
            <RowDefinition Height="12*"/>

        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="2">
            <Button Content="{Binding ButtonAdd}" MinHeight="50" MinWidth="150" FontSize="20" Background="White" Margin="0, 35, 0, 0" Command="{Binding AddCourier}">

                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" >

            <TextBlock Text="Фамилия Курьера" MinHeight="30" HorizontalAlignment="Center" FontSize="20" Foreground="White" />
            <TextBox Text="{Binding SelectedCourier.LastName, UpdateSourceTrigger=PropertyChanged}" MinHeight="30" MinWidth="400" BorderBrush="#FF21201E" FontSize="15" >
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBlock Text="Имя Курьера" MinHeight="30" HorizontalAlignment="Center" FontSize="20" Foreground="White" Margin="0, 5, 0, 0" />
            <TextBox Text="{Binding SelectedCourier.FirstName, UpdateSourceTrigger=PropertyChanged}" MinHeight="30" MinWidth="400" BorderBrush="#FF21201E" FontSize="15" >
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBlock Text="Отчество Курьера" MinHeight="30" HorizontalAlignment="Center" FontSize="20" Foreground="White" Margin="0, 10, 0, 0" />
            <TextBox Text="{Binding SelectedCourier.Patronymic, UpdateSourceTrigger=PropertyChanged}" MinHeight="30" MinWidth="400" BorderBrush="#FF21201E" FontSize="15" >
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>


            <TextBlock Text="Внесённый залог" MinHeight="30" HorizontalAlignment="Center" Margin="0, 5, 0, 0" FontSize="20" Foreground="White"  />
            <TextBox Text="{Binding SelectedCourier.Pledge, UpdateSourceTrigger=PropertyChanged}" MinHeight="30" MinWidth="400" BorderBrush="#FF21201E" FontSize="15">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBlock Text="Дата начала работы" MinHeight="30" HorizontalAlignment="Center" Margin="0, 5, 0, 0" FontSize="20" Foreground="White"  />
            <DatePicker Foreground="Black" Background="White" MinHeight="30" BorderBrush="#FF21201E" FontSize="15" SelectedDate="{Binding SelectedCourier.WorkStart, UpdateSourceTrigger=PropertyChanged}">
                <DatePicker.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3"/>
                    </Style>
                </DatePicker.Resources>
            </DatePicker>

        </StackPanel>
    </Grid>
</Window>
