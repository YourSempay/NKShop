<Window x:Class="NKShop.View.OrderHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NKShop.View"
        mc:Ignorable="d"
        Title="История заказов" Height="450" Width="800" Background="#FF847C7C">
    <Grid>
        <ListView Grid.Row="0" Grid.ColumnSpan="2" ItemsSource="{Binding HisOrders}" SelectedItem="{Binding SelectedHisOrder}" Foreground="#FF020202" Width="750" Height="400" Background="#FFDEDBDB">
            <ListView.ContextMenu >
                <ContextMenu >
                    <MenuItem Header="Заказы в истории" />
                </ContextMenu>
            </ListView.ContextMenu >
            <ListView.View >
                <GridView>
                    <GridViewColumn Header="Товар в заказе" DisplayMemberBinding="{Binding ProductInOrder}" Width="100" />
                    <GridViewColumn Header="Общий вес заказа(г)" DisplayMemberBinding="{Binding Quantity}" Width="130" />
                    <GridViewColumn Header="Полная цена" DisplayMemberBinding="{Binding FullPrice}"  Width="100" />
                    <GridViewColumn Header="Назначенный курьер" DisplayMemberBinding="{Binding DesignatedCourier}" Width="140" />
                    <GridViewColumn Header="Координаты заказа" DisplayMemberBinding="{Binding Coordinates}" Width="140" />
                    <GridViewColumn Header="Выполнен ли заказ" DisplayMemberBinding="{Binding OrderIsReady}" Width="130" />
                </GridView>
            </ListView.View>
        </ListView>
        
        </Grid>
</Window>
